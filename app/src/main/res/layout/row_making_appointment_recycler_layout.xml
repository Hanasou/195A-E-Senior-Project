<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#97C9E7"
    android:padding="6dip">

    <ImageView
        android:id="@+id/making_appointment_recyclerView_icon"
        android:layout_width="107dp"
        android:layout_height="67dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="605dp"
        android:contentDescription="TODO"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/previewView_making_appointment"
        android:layout_width="294dp"
        android:layout_height="61dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/making_appointment_recyclerView_icon"
        android:text="Example application"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toEndOf="@+id/making_appointment_recyclerView"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/making_appointment_back_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="161dp"
        android:backgroundTint="#99B1BE"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginBottom="89dp"
        android:text="Back" />

</RelativeLayout>